<% merge_requests.each do |merge_request| %>
  <%= link_to(merge_request.display_id,
              merge_request.url, 
              title: "#{merge_request.title} (#{merge_request.state})",
              class: "icon icon-merge-request-#{merge_request.state}") +
      (', ' unless merge_request == merge_requests.last)
  %>
<% end %>
